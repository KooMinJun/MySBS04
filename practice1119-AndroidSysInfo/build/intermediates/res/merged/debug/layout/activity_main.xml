<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="my.kmucs.com.androidsysinfo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System info"
        android:textSize="30dp"/>

    <Button
        android:id="@+id/osInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android OS Info"/>

    <Button
        android:id="@+id/cpuInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CPU OS Info"/>

    <Button
        android:id="@+id/memoryInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Memory Info"/>

    <Button
        android:id="@+id/diskInfoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disk OS Info"/>

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"/>

</LinearLayout>
